 @model IEnumerable<WebLibrary.Webentity>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.name) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brithdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.exceptedsalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brithdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exceptedsalary)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.name }) |
                @Html.ActionLink("Details", "Details", new { id = item.name }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.name })

            </td>
        </tr>
}
    </tbody>
</table>
